<h1 class="center-align" style="margin-bottom:2em">Stories</h1>

<div class="row">
  {{#each stories}}

  <div class="col s12 m4">
    <div class="card">
      <div class="card-image">
        <!-- user is from stories as we are under that loop -->
        <!-- go up out of the loop and get the logged in user  -->
        {{{editIcon user ../user _id }}}
      </div>
      <div class="card-content center-align">
        <h5>{{title}}</h5>
        <!-- truncate first then striptags -->
        <p>{{stripTags (truncate body 150)}}</p>
        <br />

        <div class="chip">
          <img src="{{user.image}}" alt="" />
          <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
        </div>
      </div>

      <div class="card-action center-align">
        <a href="/stories/{{_id}}" class="btn grey">Read More</a>
      </div>
    </div>
  </div>

  {{else}}
  <p>No Stories to display</p>

  {{/each}}
</div>
